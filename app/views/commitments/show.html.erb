<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Commitment #<%= @commitment.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/commitments" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/delete_commitment/<%= @commitment.id %>" class="btn btn-block btn-outline-secondary">
          Delete commitment
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Proposal
      </dt>
      <dd>
        <%= @commitment.proposal_id %>
      </dd>

      <dt>
        Step
      </dt>
      <dd>
        <%= @commitment.step_id %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <%= @commitment.user_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@commitment.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@commitment.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Edit commitment
    </h2>

    <form action="/modify_commitment/<%= @commitment.id %>"  method="post" >
      <div class="form-group">
        <label for="proposal_id">
          Proposal
        </label>

        <input type="text" id="proposal_id" name="proposal_id" class="form-control" value="<%= @commitment.proposal_id %>">
      </div>

      <div class="form-group">
        <label for="step_id">
          Step
        </label>

        <input type="text" id="step_id" name="step_id" class="form-control" value="<%= @commitment.step_id %>">
      </div>

      <div class="form-group">
        <label for="user_id">
          User
        </label>

        <input type="text" id="user_id" name="user_id" class="form-control" value="<%= @commitment.user_id %>">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Create commitment
      </button>
    </form>
  </div>
</div>

<hr>
