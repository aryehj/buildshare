<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      List of all stakeholders
    </h1>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Add a new stakeholder
    </h2>

    <form action="/insert_stakeholder" method="post">
      <div class="form-group">
        <label for="name">
          Name
        </label>

        <input type="text" id="name" name="name" class="form-control">
      </div>

      <div class="form-group">
        <label for="email">
          Email
        </label>

        <input type="text" id="email" name="email" class="form-control">
      </div>

      <div class="form-group">
        <label for="phone">
          Phone
        </label>

        <input type="text" id="phone" name="phone" class="form-control">
      </div>

      <div class="form-group">
        <label for="address">
          Address
        </label>

        <input type="text" id="address" name="address" class="form-control">
      </div>

      <div class="form-group">
        <label for="created_by_user_id">
          Created by user
        </label>

        <input type="text" id="created_by_user_id" name="created_by_user_id" class="form-control">
      </div>

      <div class="form-group">
        <label for="proposal_id">
          Proposal
        </label>

        <input type="text" id="proposal_id" name="proposal_id" class="form-control">
      </div>

      <div class="form-group">
        <label for="step_id">
          Step
        </label>

        <input type="text" id="step_id" name="step_id" class="form-control">
      </div>

      <div class="form-group">
        <label for="user_id">
          User
        </label>

        <input type="text" id="user_id" name="user_id" class="form-control">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Create stakeholder
      </button>
    </form>
  </div>
</div>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Email
        </th>

        <th>
          Phone
        </th>

        <th>
          Address
        </th>

        <th>
          Created by user
        </th>

        <th>
          Proposal
        </th>

        <th>
          Step
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @stakeholders.each do |stakeholder| %>
      <tr>
        <td>
          <%= stakeholder.id %>
        </td>

        <td>
          <%= stakeholder.name %>
        </td>

        <td>
          <%= stakeholder.email %>
        </td>

        <td>
          <%= stakeholder.phone %>
        </td>

        <td>
          <%= stakeholder.address %>
        </td>

        <td>
          <%= stakeholder.created_by_user_id %>
        </td>

        <td>
          <%= stakeholder.proposal_id %>
        </td>

        <td>
          <%= stakeholder.step_id %>
        </td>

        <td>
          <%= stakeholder.user_id %>
        </td>

        <td>
          <%= time_ago_in_words(stakeholder.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(stakeholder.updated_at) %> ago
        </td>

        <td>
          <a href="/stakeholders/<%= stakeholder.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
