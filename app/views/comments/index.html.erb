<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      List of all comments
    </h1>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Add a new comment
    </h2>

    <form action="/insert_comment" method="post">
      <div class="form-group">
        <label for="comment">
          Comment
        </label>

        <textarea id="comment" name="comment" class="form-control" rows="3"></textarea>
      </div>

      <div class="form-group">
        <label for="user_id">
          User
        </label>

        <input type="text" id="user_id" name="user_id" class="form-control">
      </div>

      <div class="form-group">
        <label for="proposal_id">
          Proposal
        </label>

        <input type="text" id="proposal_id" name="proposal_id" class="form-control">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Create comment
      </button>
    </form>
  </div>
</div>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Comment
        </th>

        <th>
          User
        </th>

        <th>
          Proposal
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @comments.each do |comment| %>
      <tr>
        <td>
          <%= comment.id %>
        </td>

        <td>
          <%= comment.comment %>
        </td>

        <td>
          <%= comment.user_id %>
        </td>

        <td>
          <%= comment.proposal_id %>
        </td>

        <td>
          <%= time_ago_in_words(comment.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(comment.updated_at) %> ago
        </td>

        <td>
          <a href="/comments/<%= comment.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
