<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Comment #<%= @comment.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/comments" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/delete_comment/<%= @comment.id %>" class="btn btn-block btn-outline-secondary">
          Delete comment
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Comment
      </dt>
      <dd>
        <%= @comment.comment %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <%= @comment.user_id %>
      </dd>

      <dt>
        Proposal
      </dt>
      <dd>
        <%= @comment.proposal_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@comment.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@comment.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Edit comment
    </h2>

    <form action="/modify_comment/<%= @comment.id %>"  method="post" >
      <div class="form-group">
        <label for="comment">
          Comment
        </label>

        <textarea id="comment" name="comment" class="form-control"
          rows="3"><%= @comment.comment %></textarea>
      </div>

      <div class="form-group">
        <label for="user_id">
          User
        </label>

        <input type="text" id="user_id" name="user_id" class="form-control" value="<%= @comment.user_id %>">
      </div>

      <div class="form-group">
        <label for="proposal_id">
          Proposal
        </label>

        <input type="text" id="proposal_id" name="proposal_id" class="form-control" value="<%= @comment.proposal_id %>">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Create comment
      </button>
    </form>
  </div>
</div>

<hr>
